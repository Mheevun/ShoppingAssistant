<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mheev.helpthemshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <currentActivity android:name=".currentActivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </currentActivity>
        <currentActivity
            android:name=".currentActivity.ItemDetailActivity_deprecate"
            android:label="@string/title_activity_details"
            android:parentActivityName=".currentActivity.MainActivity"
            android:windowSoftInputMode="stateHidden"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mheev.helpthemshop.currentActivity.MainActivity" />
        </currentActivity>
        <currentActivity
            android:name=".currentActivity.ItemDetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName=".currentActivity.MainActivity"
            android:windowSoftInputMode="stateHidden"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mheev.helpthemshop.currentActivity.MainActivity" />
        </currentActivity>
    </application>

</manifest>